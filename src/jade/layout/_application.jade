include /mixin/_conditionalComment
doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    block title
    block meta
      include /include/meta/_basicinfo
      include /include/meta/_viewport
    block style
      link(rel='stylesheet', href='css/main.css', media='screen, print')
      link(href='http://fonts.googleapis.com/css?family=Open+Sans:700' rel='stylesheet' type='text/css')
    +ltIE9
      script(src='/js/lib/html5shiv.js')
  body
    block body

    block scripts
      include /include/script/_twitter
      include /include/script/_facebook
      each val in libs
        script(src=val)
      if prod
        script(src='js/app.min.js')
      else
          each val in sc
            script(src=val)
